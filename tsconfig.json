{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist", 
    "paths": {
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@mongo": [
        "./src/config"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ]
    },                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
